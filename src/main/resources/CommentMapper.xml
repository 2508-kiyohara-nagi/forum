<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.forum.mapper.CommentMapper">

    <resultMap id="CommentResult" type="com.example.forum.repository.entity.Comment">
        <result column="id" property="id" />
        <result column="report_id" property="reportId" />
        <result column="text" property="text" />

    </resultMap>

    <select id="selectAllOrderByIdDesc" resultMap="CommentResult">
        SELECT id, report_id, text
        FROM comments
        ORDER BY id DESC
    </select>

    <select id="selectCommentById" parameterType="int" resultMap="CommentResult">
        SELECT id, report_id, text
        FROM comments
        WHERE id = #{id}
    </select>

    <insert id="insertComment" parameterType="com.example.forum.repository.entity.Comment">
        INSERT INTO comments (report_id, text, created_date, updated_date)
        VALUES (#{reportId}, #{text}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>

    <delete id="deleteComment" parameterType="int">
        DELETE FROM comments WHERE id = #{id}
    </delete>

    <update id="updateComment" parameterType="com.example.forum.repository.entity.Comment">
        UPDATE comments
        SET report_id = #{reportId},
        text = #{text}
        WHERE id = #{id}
    </update>

</mapper>