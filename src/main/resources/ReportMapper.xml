<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.forum.mapper.ReportMapper">

    <resultMap id="ReportResult" type="com.example.forum.repository.entity.Report">
        <result column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="updated_date" property="updatedDate"/>
    </resultMap>

    <select id="selectReportsByUpdatedDate" resultMap="ReportResult">
        SELECT * FROM report
        WHERE updated_date BETWEEN #{start} AND #{end}
        ORDER BY updated_date DESC
    </select>

    <select id="selectReportById" resultMap="ReportResult">
        SELECT * FROM report WHERE id = #{id}
    </select>

    <insert id="insertReport" parameterType="com.example.forum.repository.entity.Report">
        INSERT INTO report (content, updated_date)
        VALUES (#{content}, CURRENT_TIMESTAMP)
    </insert>

    <update id="updateReport" parameterType="com.example.forum.repository.entity.Report">
        UPDATE report
        SET content = #{content},
        updated_date = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM report WHERE id = #{id}
    </delete>

    <update id="updateReportUpdatedDate">
        UPDATE report SET updated_date = #{updatedDate} WHERE id = #{id}
    </update>

</mapper>